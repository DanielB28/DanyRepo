<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo WebApp</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="main">
    <div class="topNav navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="ulNav nav navbar-nav">
                    <li data-ng-class="{active : activeViewPath==='/home'}">
                        <a href="#/home">Home</a>
                    </li>
                    <li>
                        <a class="brand" href='#/webapp'>Todolist Webapp</a>
                    </li>
                    
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>
    
    <div class="layoutContainer container" ng-controller="TodoWebappController">
        <br />
        <h2 class="heading2Color">Todolist WebApp</h2><br />
        <a id="btnOpenApp" href="#/webapp">Open application</a>
        @*first renders index.cshtml which contains ng-view*@
        @RenderBody() 
        <hr />
        
    </div>
    <footer class="mainFooter">
        <p>&copy; @DateTime.Now.Year - ToDo WebApp</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/app")

</body>
</html>